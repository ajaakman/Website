<!DOCTYPE html>
<html>
  <head>
    <title>Artur Jaakman</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" type="text/css" href="http://fonts.googleapis.com/css?family=Raleway">
  </head>

  <body>
    <div class = "container">
      <nav class="navbar navbar-default">
        <ul class="nav navbar-nav">
          <li><%= link_to "Home", root_path %></li>
          <li>
            <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Audio Programming</a>
            <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
              <li><%= link_to "Modular Audio App", portfolio_modular_path %></li>
