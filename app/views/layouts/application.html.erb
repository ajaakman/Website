              <li><%= link_to "3D Renderer", portfolio_renderer_path %></li>
              <li><%= link_to "UE4 Bullet Whizz", portfolio_whizz_path %></li>
              <li><%= link_to "UE4 Rewinder Class", portfolio_rewinder_path %></li>
              <li><%= link_to "Unity Simple Game", portfolio_unity_path %></li>
              <li><%= link_to "UDK Sound Design", portfolio_udk_path %></li>
            </ul>
          </li>
        </ul>
      </nav>
      <%= yield %>
    </div>
  </body>
